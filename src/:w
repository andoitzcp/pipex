#include "pipex.h"
#include <stdlib.h>

char ft_checkarguments(int argc, char **argv)
{
    int i;
    if (argc != 5)
        return (1);
    i = 0;
    while (i++ < argc)
    {
        if (*argv[i] == '\0')
            perror("Argument %d is not a valid argument")
    }


}

int main(int argc, char **argv)
{
    if (ft_checkarguments(argc, argv))
        exit (EXIT_FAILURE);

}
